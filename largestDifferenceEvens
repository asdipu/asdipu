int largestDifferenceEven(int[] a){
   int largestdiff = -1;
   int firsteven = -1;
   for(int i=0;i<a.lenght;i++){
     if(a[i]%2==0){
         if(firsteven== -1){
           firsteven = i;
           }
        else{
           int diff = a[i]-a[firsteven];
           if(diff>largestdiff){
             largestdiff = diff;
            }
           }
          }
         }
         return largestdiff;
